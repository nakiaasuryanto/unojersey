<style>
  .footer-section {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  /* PART 1: Split Section - Kreasi & Temukan */
  .footer-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 400px;
  }

  .footer-split-left {
    padding: 80px 24px;
    background: #ffffff;
    border: 2px solid #E63946;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .footer-split-right {
    padding: 80px 24px;
    background: linear-gradient(135deg, #E63946 0%, #c62d3a 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .footer-split-title {
    font-family: 'Bebas Neue', 'Inter', sans-serif;
    font-size: 48px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
    letter-spacing: -0.02em;
  }

  .footer-split-subtitle {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 32px;
    max-width: 300px;
  }

  .footer-split-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background: #ffffff;
    color: #1a1a1a;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .footer-split-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .footer-split-button:hover svg {
    transform: translateX(4px);
  }

  .footer-split-button svg {
    transition: transform 0.3s ease;
  }

  .footer-split-left .footer-split-title {
    color: #E63946;
  }

  .footer-split-left .footer-split-subtitle {
    color: rgba(26, 26, 26, 0.7);
  }

  .footer-split-left .footer-split-button {
    background: transparent;
    color: #E63946;
    border: 2px solid #E63946;
  }

  .footer-split-left .footer-split-button:hover {
    background: #E63946;
    color: #ffffff;
  }

  .footer-split-right .footer-split-button {
    background: #ffffff;
    color: #1a1a1a;
  }

  /* PART 2: Footer Bottom */
  .footer-main {
    padding: 32px 24px 40px;
    background: #1a1a1a;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Footer Links Row - 3 Columns */
  .footer-links-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .footer-link-item {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-link-item:hover {
    color: #E63946;
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
  }

  .footer-bottom-brand {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .footer-logo-small {
    height: 32px;
    width: auto;
  }

  .footer-copyright {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  .footer-socials {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .footer-socials a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
  }

  .footer-socials a:hover {
    background: #E63946;
    color: #ffffff;
    transform: translateY(-2px);
  }

  .footer-socials svg {
    width: 16px;
    height: 16px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-split-title {
      font-size: 36px;
    }

    .footer-split-subtitle {
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .footer-split {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .footer-split-left,
    .footer-split-right {
      padding: 60px 16px;
    }

    .footer-split-title {
      font-size: 32px;
    }

    .footer-split-subtitle {
      font-size: 14px;
      max-width: 100%;
    }

    .footer-split-button {
      width: 100%;
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 16px;
    }

    .footer-bottom-brand {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>
