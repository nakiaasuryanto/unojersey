<script>
  // Mobile auto swipe functionality
  (function() {
    'use strict';

    const mobileCarousel = document.querySelector('.products-mobile-carousel');
    const carouselDots = document.getElementById('carouselDots');
    if (!mobileCarousel) return;

    let currentIndex = 0;
    const slides = document.querySelectorAll('.product-slide');
    const dots = carouselDots?.querySelectorAll('.carousel-dot') || [];
    const totalSlides = slides.length;
    const autoScrollDelay = 4000; // 4 seconds per slide

    // Get slide width dynamically
    const getSlideWidth = () => {
      const slide = slides[0];
      if (!slide) return window.innerWidth;
      return slide.offsetWidth;
    };

    // Update active dot
    const updateDots = (index) => {
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
    };

    // Auto scroll function
    const autoScroll = () => {
      currentIndex = (currentIndex + 1) % totalSlides;
      mobileCarousel.scrollTo({
        left: currentIndex * getSlideWidth(),
        behavior: 'smooth'
      });
      updateDots(currentIndex);
    };

    // Start auto scroll
    let autoScrollInterval = setInterval(autoScroll, autoScrollDelay);

    // Pause auto scroll on user interaction
    mobileCarousel.addEventListener('touchstart', () => {
      clearInterval(autoScrollInterval);
    });

    mobileCarousel.addEventListener('touchend', () => {
      autoScrollInterval = setInterval(autoScroll, autoScrollDelay);
    });

    mobileCarousel.addEventListener('scroll', () => {
      clearInterval(autoScrollInterval);
    });

    // Dot click handlers
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentIndex = index;
        mobileCarousel.scrollTo({
          left: currentIndex * getSlideWidth(),
          behavior: 'smooth'
        });
        updateDots(currentIndex);
      });
    });
  })();

  // Product tabs functionality for desktop
  const tabs = document.querySelectorAll('.sport-icon-tab');
  const models = document.querySelectorAll('.product-model-item');
  const infos = document.querySelectorAll('.product-info-item');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const sport = tab.dataset.sport;

      // Update active tab
      tabs.forEach(t => {
        t.classList.remove('active');
        t.setAttribute('aria-selected', 'false');
      });
      tab.classList.add('active');
      tab.setAttribute('aria-selected', 'true');

      // Update active model
      models.forEach(m => {
        m.classList.remove('active');
        if (m.dataset.model === sport) {
          m.classList.add('active');
        }
      });

      // Update active info
      infos.forEach(info => {
        if (info.id === 'info-' + sport) {
          info.style.display = 'block';
        } else {
          info.style.display = 'none';
        }
      });
    });
  });
</script>
