<style>
  .portfolio {
    min-height: 100vh;
    height: 100vh;
    padding: 0;
    background-color: #ffffff;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .portfolio-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .portfolio-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-top: 80px;
    margin-bottom: 20px;
    gap: 24px;
    flex-shrink: 0;
  }

  .portfolio-header-left {
    flex: 1;
  }

  .portfolio-header-right {
    flex: 1;
    text-align: right;
  }

  .portfolio-hashtag {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 64px;
    color: #1a1a1a;
    letter-spacing: 0.025em;
    line-height: 1;
  }

  .portfolio-tagline {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #4b5563;
    max-width: 400px;
    margin-left: auto;
    line-height: 1.6;
  }

  .portfolio-grid {
    display: grid !important;
    grid-template-columns: repeat(4, 1fr) !important;
    grid-auto-rows: 1fr;
    gap: 12px;
    flex: 1;
    min-height: 0;
    overflow: hidden;
  }

  /* Force grid on all children */
  .portfolio-grid :global(*) {
    grid-column: auto;
    grid-row: auto;
  }

  .portfolio-cta {
    margin-top: 20px;
    padding-bottom: 16px;
    display: flex;
    justify-content: center;
    flex-shrink: 0;
  }

  .portfolio-cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: #ffffff;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 9999px;
    transition: all 0.3s ease;
  }

  .portfolio-cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(220, 39, 67, 0.3);
  }

  /* Portfolio Cards - Global for dynamically added elements */
  :global(.portfolio-card) {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    background: #1a1a1a;
    aspect-ratio: 9 / 16;
  }

  :global(.portfolio-card-inner) {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.portfolio-card img.portfolio-image),
  :global(.portfolio-card video.portfolio-video) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  :global(.portfolio-card video.portfolio-video) {
    display: block;
  }

  :global(.portfolio-card:hover img.portfolio-image),
  :global(.portfolio-card:hover video.portfolio-video) {
    transform: scale(1.08);
  }

  :global(.portfolio-card:hover) {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  :global(.portfolio-overlay) {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.4) 50%, rgba(0, 0, 0, 0.1) 100%);
    display: flex;
    align-items: flex-end;
    padding: 24px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  :global(.portfolio-card:hover .portfolio-overlay) {
    opacity: 1;
  }

  :global(.portfolio-content) {
    color: #ffffff;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  :global(.portfolio-card:hover .portfolio-content) {
    transform: translateY(0);
  }

  :global(.portfolio-category) {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 600;
    color: #E63946;
    background-color: #ffffff;
    padding: 4px 12px;
    border-radius: 9999px;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  :global(.portfolio-title) {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 24px;
    color: #ffffff;
    margin-bottom: 8px;
    line-height: 1.2;
    letter-spacing: 0.025em;
  }

  :global(.portfolio-description) {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
    max-width: 300px;
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 8px;
    }

    .portfolio-hashtag {
      font-size: 36px;
    }

    .portfolio-tagline {
      font-size: 12px;
    }

    :global(.portfolio-title) {
      font-size: 18px;
    }

    :global(.portfolio-description) {
      font-size: 12px;
    }
  }
</style>

<script>
  (function() {
    'use strict';

    console.log('PortfolioSection: Initializing...');

    // Portfolio data with videos
    const portfolioItems = [
