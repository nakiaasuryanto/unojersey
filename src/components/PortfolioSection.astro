        description: 'Warna + desainnya cakep banget apalagi pake cuttingan boxyðŸ˜Ž',
        link: 'https://www.instagram.com/reel/DTIALyVEeDC/'
      }
    ];

    const portfolioGrid = document.getElementById('portfolio-grid');

    if (!portfolioGrid) {
      console.error('PortfolioSection: portfolio-grid element not found');
      return;
    }

    console.log('PortfolioSection: Found portfolio-grid, computed style display:', window.getComputedStyle(portfolioGrid).display);
    console.log('PortfolioSection: Found portfolio-grid, rendering', portfolioItems.length, 'items');

    // Clear existing items
    portfolioGrid.innerHTML = '';

    // Generate portfolio cards
    portfolioItems.forEach((item, index) => {
      const card = document.createElement('div');
      card.className = `portfolio-card portfolio-${item.size}`;
      card.dataset.category = item.category;
      card.dataset.index = index;
      card.style.opacity = '0'; // Initial state for animation

      const hasVideo = item.type === 'video' && item.video;

      if (hasVideo) {
        card.innerHTML = `
          <div class="portfolio-card-inner">
            <video
              src="${item.video}"
              alt="${item.title}"
              class="portfolio-video"
              muted
              loop
              autoplay
              playsinline
              loading="lazy"></video>
            <div class="portfolio-overlay">
              <div class="portfolio-content">
                <span class="portfolio-category">#${item.category.toUpperCase()}</span>
                <h3 class="portfolio-title">${item.title}</h3>
                <p class="portfolio-description">${item.description}</p>
              </div>
            </div>
          </div>
        `;
      } else {
        card.innerHTML = `
          <div class="portfolio-card-inner">
            <img src="${item.image}" alt="${item.title}" loading="lazy" class="portfolio-image">
            <div class="portfolio-overlay">
              <div class="portfolio-content">
                <span class="portfolio-category">#${item.category.toUpperCase()}</span>
                <h3 class="portfolio-title">${item.title}</h3>
                <p class="portfolio-description">${item.description}</p>
              </div>
            </div>
          </div>
        `;
      }

      portfolioGrid.appendChild(card);

      // Add click handler to open link
      card.addEventListener('click', () => {
        if (item.link) {
          window.open(item.link, '_blank');
        }
      });
    });

    console.log('PortfolioSection: Successfully rendered', portfolioItems.length, 'portfolio cards');
    console.log('PortfolioSection: portfolio-grid children count:', portfolioGrid.children.length);

    // Animate cards in using CSS (no GSAP)
    setTimeout(() => {
      const cards = portfolioGrid.querySelectorAll('.portfolio-card');
      console.log('PortfolioSection: Found', cards.length, 'portfolio-card elements');
      cards.forEach((card, i) => {
        setTimeout(() => {
          card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, i * 100);
      });
      console.log('PortfolioSection: Animation started for', cards.length, 'cards');
    }, 100);

  })();
</script>
