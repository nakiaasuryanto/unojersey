---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Temukan Jersey Impianmu | UNO JERSEY"
  description="Jawab 5 pertanyaan sederhana dan kami akan merekomendasikan jersey yang sempurna untuk tim Anda"
  showNavbar={false}
  showFooter={false}
>
  <!-- Split Container -->
  <div class="split-container">

    <!-- Left Side: Header + Quiz + Footer -->
    <div class="left-side">
      <!-- Header -->
      <header class="quiz-header">
        <a href="/" class="header-logo-link">
          <img src="/images/UNO-Black.png" alt="UNO JERSEY" class="header-logo">
        </a>
      </header>

      <!-- Quiz Content -->
      <main class="quiz-wrapper">

        <!-- Screen 1: Introduction -->
        <div class="quiz-screen active" id="screen-intro">
          <div class="intro-content">
            <h1 class="intro-title">Temukan Jersey Impianmu</h1>
            <p class="intro-subtitle">Jawab 5 pertanyaan sederhana dan kami akan merekomendasikan jersey yang sempurna untuk tim Anda</p>

            <div class="intro-features">
              <div class="feature-card">
                <span class="feature-count">5</span>
                <span class="feature-label">Pertanyaan</span>
              </div>
              <div class="feature-card">
                <span class="feature-count">1</span>
                <span class="feature-label">Menit</span>
              </div>
              <div class="feature-card">
                <span class="feature-icon">âœ¨</span>
                <span class="feature-label">Personal</span>
              </div>
            </div>

            <button class="btn btn-primary btn-large" id="btn-start-quiz">
              Mulai Quiz
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Screen 2: Question 1 - Model Jersey -->
        <div class="quiz-screen" id="screen-q1">
          <div class="question-content">
            <div class="question-header">
              <span class="question-number">Pertanyaan 1 dari 5</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 20%"></div>
              </div>
            </div>

            <h2 class="question-title">Model jersey apa yang kamu cari?</h2>

            <div class="options-list">
              <button class="option-card" data-value="basic">
                <span class="option-label">Basic (Simple & versatile)</span>
              </button>
              <button class="option-card" data-value="basket">
                <span class="option-label">Basket (Athletic & bold)</span>
              </button>
              <button class="option-card" data-value="baseball">
                <span class="option-label">Baseball (Classic & casual)</span>
              </button>
              <button class="option-card" data-value="polo">
                <span class="option-label">Polo (Smart & elegant)</span>
              </button>
              <button class="option-card" data-value="set">
                <span class="option-label">Set (Complete & coordinated)</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Screen 3: Question 2 - Quantity -->
        <div class="quiz-screen" id="screen-q2">
          <div class="question-content">
            <div class="question-header">
              <span class="question-number">Pertanyaan 2 dari 5</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 40%"></div>
              </div>
            </div>

            <h2 class="question-title">Berapa banyak jersey yang kamu butuhkan?</h2>

            <div class="options-list">
              <button class="option-card" data-value="1-5">
                <span class="option-label">1-5 pcs (Personal/Small group)</span>
              </button>
              <button class="option-card" data-value="6-15">
                <span class="option-label">6-15 pcs (Team kecil)</span>
              </button>
              <button class="option-card" data-value="16-30">
                <span class="option-label">16-30 pcs (Team sedang)</span>
              </button>
              <button class="option-card" data-value="30+">
                <span class="option-label">30+ pcs (Team besar/Event)</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Screen 4: Question 3 - Custom Features -->
        <div class="quiz-screen" id="screen-q3">
          <div class="question-content">
            <div class="question-header">
              <span class="question-number">Pertanyaan 3 dari 5</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 60%"></div>
              </div>
            </div>

            <h2 class="question-title">Fitur custom apa yang paling penting?</h2>

            <div class="options-list">
              <button class="option-card" data-value="nama-nomor">
                <span class="option-label">Nama & nomor punggung</span>
              </button>
              <button class="option-card" data-value="logo-tim">
                <span class="option-label">Logo tim/brand</span>
              </button>
              <button class="option-card" data-value="full-custom">
                <span class="option-label">Full design custom</span>
              </button>
              <button class="option-card" data-value="warna">
                <span class="option-label">Warna spesifik</span>
              </button>
              <button class="option-card" data-value="semua">
                <span class="option-label">Semua fitur</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Screen 5: Question 4 - Timeline -->
        <div class="quiz-screen" id="screen-q4">
          <div class="question-content">
            <div class="question-header">
              <span class="question-number">Pertanyaan 4 dari 5</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 80%"></div>
              </div>
            </div>

            <h2 class="question-title">Kapan kamu butuh jerseynya?</h2>

            <div class="options-list">
              <button class="option-card" data-value="tidak-mendesak">
                <span class="option-label">Tidak mendesak (2-3 minggu)</span>
              </button>
              <button class="option-card" data-value="standar">
                <span class="option-label">Standar (1-2 minggu)</span>
              </button>
              <button class="option-card" data-value="cepat">
                <span class="option-label">Cepat (&lt; 1 minggu)</span>
              </button>
              <button class="option-card" data-value="express">
                <span class="option-label">Express (3-5 hari)</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Screen 6: Question 5 - Budget -->
        <div class="quiz-screen" id="screen-q5">
          <div class="question-content">
            <div class="question-header">
              <span class="question-number">Pertanyaan 5 dari 5</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 100%"></div>
              </div>
            </div>

            <h2 class="question-title">Budget range per piece?</h2>

            <div class="options-list">
              <button class="option-card" data-value="hemat">
                <span class="option-label">Hemat (50-70rb)</span>
              </button>
              <button class="option-card" data-value="standar">
                <span class="option-label">Standar (70-100rb)</span>
              </button>
              <button class="option-card" data-value="premium">
                <span class="option-label">Premium (100rb+)</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Screen 7: User Info Form -->
        <div class="quiz-screen" id="screen-form">
          <div class="form-content">
            <div class="form-header">
              <h2 class="form-title">Data Terakhir</h2>
              <p class="form-subtitle">Isi data diri untuk melihat rekomendasi jersey Anda</p>
            </div>

            <form class="user-form" id="user-form">
              <div class="form-group">
                <label for="user-name" class="form-label">Nama Lengkap</label>
                <input
                  type="text"
                  id="user-name"
                  name="name"
                  class="form-input"
                  placeholder="Masukkan nama lengkap"
                  required
                  minlength="2"
                >
              </div>

              <div class="form-group">
                <label for="user-phone" class="form-label">Nomor WhatsApp</label>
                <input
                  type="tel"
                  id="user-phone"
                  name="phone"
                  class="form-input"
                  placeholder="081234567890"
                  required
                  pattern="[0-9]{9,13}"
                >
                <small class="form-hint">Format: 08xx atau 628xx</small>
              </div>

              <div class="form-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="terms-agree" required>
                  <span>Saya setuju dengan <a href="#">Syarat & Ketentuan</a></span>
                </label>
              </div>

              <button type="submit" class="btn btn-primary btn-large btn-block">
                Lihat Rekomendasi
              </button>
            </form>
          </div>
        </div>

        <!-- Screen 8: Loading -->
        <div class="quiz-screen" id="screen-loading">
          <div class="loading-content">
            <div class="loading-spinner"></div>
            <h2 class="loading-title">Menganalisis Preferensi Anda...</h2>
            <p class="loading-text">Mencari jersey yang paling cocok untuk tim Anda</p>
          </div>
        </div>

        <!-- Screen 9: Result -->
        <div class="quiz-screen" id="screen-result">
          <div class="result-content">
            <div class="result-badge">Rekomendasi Terbaik</div>

            <div class="result-jersey-display">
              <svg class="result-jersey-svg" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M100 25L65 40V60H45L20 85L35 110L50 100V165H150V100L165 110L180 85L155 60H135V40L100 25Z" fill="#FFE5E7" stroke="#E63946" stroke-width="2"/>
                <circle cx="100" cy="95" r="28" fill="#E63946"/>
                <text x="100" y="103" text-anchor="middle" fill="white" font-size="22" font-weight="bold">10</text>
              </svg>
            </div>

            <h2 class="result-title" id="result-jersey-name">Jersey Futsal Minimalis</h2>

            <div class="result-card">
              <div class="result-details">
                <div class="result-item">
                  <span class="result-label">Tipe</span>
                  <span class="result-value" id="result-type">Futsal Jersey</span>
                </div>
                <div class="result-item">
                  <span class="result-label">Gaya</span>
                  <span class="result-value" id="result-style">Minimalis</span>
                </div>
                <div class="result-item">
                  <span class="result-label">Olahraga</span>
                  <span class="result-value" id="result-sport">Futsal</span>
                </div>
                <div class="result-item">
                  <span class="result-label">Ukuran Tim</span>
                  <span class="result-value" id="result-team-size">6-10 Orang</span>
                </div>
              </div>
            </div>

            <p class="result-description">
              Jersey ini dirancang khusus untuk performa terbaik Anda dengan desain yang sesuai dengan preferensi gaya Anda.
            </p>

            <div class="result-actions">
              <a href="#" class="btn btn-primary btn-large" id="btn-design-now">
                Desain Sekarang
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
              <a href="/" class="btn btn-secondary">Kembali ke Beranda</a>
            </div>
          </div>
        </div>

      </main>

      <!-- Footer -->
      <footer class="quiz-footer">
        <p class="footer-text">&copy; 2024 UNO JERSEY. All rights reserved.</p>
      </footer>
    </div>

    <!-- Right Side: Video Only -->
    <div class="right-side">
      <video id="quiz-video" class="quiz-video" autoplay muted loop playsinline>
        <source src="/videos/hero-bg.mp4" type="video/mp4">
      </video>
    </div>

  </div>
</Layout>

<style>
  .split-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
  }

  /* Left Side */
  .left-side {
    display: flex;
    flex-direction: column;
    background: #ffffff;
    padding: 24px;
  }

  .quiz-header {
    padding: 16px 0;
  }

  .header-logo-link {
    display: inline-block;
  }

  .header-logo {
    height: 40px;
    width: auto;
  }

  .quiz-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px 0;
  }

  /* Quiz Screens */
  .quiz-screen {
    display: none;
    max-width: 500px;
    width: 100%;
  }

  .quiz-screen.active {
    display: block;
  }

  /* Intro Screen */
  .intro-content {
    text-align: center;
  }

  .intro-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 48px;
    color: #1a1a1a;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .intro-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #4b5563;
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .intro-features {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 32px;
  }

  .feature-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .feature-count {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 48px;
    color: #E63946;
  }

  .feature-icon {
    font-size: 36px;
  }

  .feature-label {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Question Screen */
  .question-content {
    max-width: 500px;
  }

  .question-header {
    margin-bottom: 24px;
  }

  .question-number {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    color: #6b7280;
    display: block;
    margin-bottom: 8px;
  }

  .progress-bar {
    width: 100%;
    height: 8px;
    background: #e5e7eb;
    border-radius: 9999px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: #E63946;
    transition: width 0.3s ease;
  }

  .question-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 32px;
    color: #1a1a1a;
    margin-bottom: 24px;
  }

  .options-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .option-card {
    padding: 16px 20px;
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: left;
  }

  .option-card:hover {
    border-color: #E63946;
    background: rgba(230, 57, 70, 0.05);
  }

  .option-label {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #1a1a1a;
  }

  /* Form Screen */
  .form-content {
    max-width: 500px;
  }

  .form-header {
    margin-bottom: 24px;
  }

  .form-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 32px;
    color: #1a1a1a;
    margin-bottom: 8px;
  }

  .form-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #4b5563;
  }

  .user-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-label {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .form-input {
    padding: 12px 16px;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: #E63946;
  }

  .form-hint {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    color: #6b7280;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    color: #4b5563;
  }

  .checkbox-label input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: #E63946;
  }

  .checkbox-label a {
    color: #E63946;
    text-decoration: none;
  }

  .checkbox-label a:hover {
    text-decoration: underline;
  }

  /* Loading Screen */
  .loading-content {
    text-align: center;
  }

  .loading-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid #e5e7eb;
    border-top-color: #E63946;
    border-radius: 50%;
    margin: 0 auto 24px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .loading-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 32px;
    color: #1a1a1a;
    margin-bottom: 8px;
  }

  .loading-text {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #4b5563;
  }

  /* Result Screen */
  #screen-result {
    max-width: 100%;
    width: 100%;
  }

  #screen-result .result-content {
    text-align: center;
    padding: 0;
  }

  .result-badge {
    display: none;
  }

  .result-jersey-display {
    margin-bottom: 16px;
  }

  .result-jersey-svg {
    width: 120px;
    height: 120px;
  }

  .result-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 28px;
    color: #1a1a1a;
    margin-bottom: 16px;
  }

  .result-card {
    background: #f9fafb;
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 16px;
  }

  .result-details {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .result-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .result-label {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .result-value {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .result-description {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    color: #4b5563;
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .result-actions {
    display: flex;
    flex-direction: row;
    gap: 12px;
    justify-content: center;
    align-items: center;
  }

  .result-actions .btn-secondary {
    white-space: nowrap;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 16px 32px;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    border-radius: 9999px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: #E63946;
    color: #ffffff;
  }

  .btn-primary:hover {
    background: #c62d3a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(230, 57, 70, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: #1a1a1a;
    border: 2px solid #e5e7eb;
  }

  .btn-secondary:hover {
    border-color: #E63946;
    color: #E63946;
  }

  .btn-large {
    padding: 20px 40px;
    font-size: 18px;
  }

  .btn-block {
    width: 100%;
  }

  /* Footer */
  .quiz-footer {
    padding: 16px 0;
    text-align: center;
  }

  .footer-text {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    color: #6b7280;
  }

  /* Right Side */
  .right-side {
    background: linear-gradient(135deg, #E63946 0%, #c62d3a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .quiz-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .split-container {
      grid-template-columns: 1fr;
    }

    .right-side {
      display: none;
    }

    .intro-title {
      font-size: 32px;
    }

    .intro-features {
      gap: 16px;
    }

    .feature-count,
    .feature-icon {
      font-size: 32px;
    }

    .result-details {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Quiz navigation and state management
  const quizData = {
    answers: {}
  };

  const screens = {
    intro: document.getElementById('screen-intro'),
    q1: document.getElementById('screen-q1'),
    q2: document.getElementById('screen-q2'),
    q3: document.getElementById('screen-q3'),
    q4: document.getElementById('screen-q4'),
    q5: document.getElementById('screen-q5'),
    form: document.getElementById('screen-form'),
    loading: document.getElementById('screen-loading'),
    result: document.getElementById('screen-result')
  };

  function showScreen(screenName) {
    // Hide all screens
    Object.values(screens).forEach(screen => {
      if (screen) screen.classList.remove('active');
    });

    // Show target screen
    if (screens[screenName]) {
      screens[screenName].classList.add('active');
    }
  }

  // Start quiz button
  const btnStartQuiz = document.getElementById('btn-start-quiz');
  if (btnStartQuiz) {
    btnStartQuiz.addEventListener('click', () => {
      showScreen('q1');
    });
  }

  // Option card handlers for all questions
  document.querySelectorAll('.option-card').forEach(card => {
    card.addEventListener('click', () => {
      const value = card.dataset.value;
      const parentScreen = card.closest('.quiz-screen');

      // Store answer based on which question screen we're on
      if (parentScreen?.id === 'screen-q1') {
        quizData.answers.model = value;
        showScreen('q2');
      } else if (parentScreen?.id === 'screen-q2') {
        quizData.answers.quantity = value;
        showScreen('q3');
      } else if (parentScreen?.id === 'screen-q3') {
        quizData.answers.features = value;
        showScreen('q4');
      } else if (parentScreen?.id === 'screen-q4') {
        quizData.answers.timeline = value;
        showScreen('q5');
      } else if (parentScreen?.id === 'screen-q5') {
        quizData.answers.budget = value;
        showScreen('form');
      }
    });
  });

  // Form submission
  const userForm = document.getElementById('user-form');
  if (userForm) {
    userForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Store user data
      const name = document.getElementById('user-name')?.value;
      const phone = document.getElementById('user-phone')?.value;
      quizData.answers.name = name;
      quizData.answers.phone = phone;

      // Calculate recommendation
      const recommendation = calculateRecommendation();
      quizData.answers.recommendation = recommendation;

      // Show loading screen
      showScreen('loading');

      // Submit to Google Sheets
      try {
        await submitToGoogleSheets({
          name: name,
          phone: phone,
          model: quizData.answers.model,
          quantity: quizData.answers.quantity,
          feature: quizData.answers.features,
          timeline: quizData.answers.timeline,
          budget: quizData.answers.budget,
          recommendation: recommendation
        });
      } catch (error) {
        console.error('Failed to submit to Google Sheets:', error);
        // Continue to result even if submission fails
      }

      // Show result after 2 seconds
      setTimeout(() => {
        updateResultScreen(recommendation);
        showScreen('result');
      }, 2000);
    });
  }

  // Calculate recommendation based on quiz answers
  function calculateRecommendation() {
    const model = quizData.answers.model || 'basic';
    const feature = quizData.answers.features || 'nama-nomor';

    const modelLabels = {
      'basic': 'Basic',
      'basket': 'Basket',
      'baseball': 'Baseball',
      'polo': 'Polo',
      'set': 'Set'
    };

    const featureLabels = {
      'nama-nomor': 'Custom Name',
      'logo-tim': 'Custom Logo',
      'full-custom': 'Full Custom',
      'warna': 'Custom Color',
      'semua': 'Premium'
    };

    return `Jersey ${modelLabels[model]} ${featureLabels[feature]}`;
  }

  // Update result screen with data
  function updateResultScreen(recommendation) {
    const resultName = document.getElementById('result-jersey-name');
    const resultType = document.getElementById('result-type');
    const resultStyle = document.getElementById('result-style');
    const resultSport = document.getElementById('result-sport');
    const resultTeamSize = document.getElementById('result-team-size');

    if (resultName) resultName.textContent = recommendation;

    const modelLabels = {
      'basic': 'Basic',
      'basket': 'Basket',
      'baseball': 'Baseball',
      'polo': 'Polo',
      'set': 'Set'
    };

    if (resultType) resultType.textContent = `${modelLabels[quizData.answers.model] || 'Basic'} Jersey`;
    if (resultStyle) resultStyle.textContent = quizData.answers.features || 'Standard';
    if (resultSport) resultSport.textContent = modelLabels[quizData.answers.model] || 'Basic';

    const quantityLabels = {
      '1-5': '1-5 Orang',
      '6-15': '6-15 Orang',
      '16-30': '16-30 Orang',
      '30+': '30+ Orang'
    };

    if (resultTeamSize) resultTeamSize.textContent = quantityLabels[quizData.answers.quantity] || '1-5 Orang';
  }

  // Submit to Google Sheets via Apps Script
  async function submitToGoogleSheets(data) {
    const GOOGLE_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbw1oM7JOETvzmNPRBRx4wtgGgmuf8uYCP6Hpr0fbfICs6zhoJFRN8VZcMyc26SiNkGzhw/exec';

    console.log('ðŸ“¤ Submitting to Google Sheets...', data);

    const response = await fetch(GOOGLE_SCRIPT_URL, {
      method: 'POST',
      mode: 'no-cors', // Required for Google Apps Script
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data)
    });

    console.log('âœ… Data submitted to Google Sheets');
    return true;
  }

