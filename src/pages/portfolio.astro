---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout
  title="Portfolio - UNO JERSEY"
  description="Showcase jersey premium yang telah kami buat untuk tim-tim terbaik"
  showNavbar={false}
>
  <!-- Navigation (with black logo, visible from start, static tagline) -->
  <Navbar logoColor="black" showLogo={true} staticTagline={true} />

  <main>
    <!-- Portfolio Hero -->
    <section class="portfolio-hero">
      <div class="hero-background"></div>
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-line">Karya</span>
          <span class="title-line highlight">Terbaik Kami</span>
        </h1>
        <p class="hero-subtitle">Showcase jersey premium yang telah kami buat untuk tim-tim terbaik</p>
      </div>
    </section>

    <!-- Portfolio Filter -->
    <section class="portfolio-filter">
      <div class="filter-container">
        <button class="filter-btn active" data-filter="all">Semua</button>
        <button class="filter-btn" data-filter="baseball">Baseball</button>
        <button class="filter-btn" data-filter="football">Football</button>
        <button class="filter-btn" data-filter="futsal">Futsal</button>
        <button class="filter-btn" data-filter="basketball">Basketball</button>
        <button class="filter-btn" data-filter="others">Others</button>
      </div>
    </section>

    <!-- Portfolio Grid -->
    <section class="portfolio-grid">
      <div class="portfolio-container" id="portfolioContainer">
        <!-- Items will be populated by JavaScript -->
      </div>
    </section>

    <!-- CTA Section -->
    <section class="portfolio-cta">
      <div class="cta-content">
        <h2 class="cta-title">Ingin Jersey Seperti Ini?</h2>
        <p class="cta-subtitle">Kreasikan jersey impianmu bersama UNO JERSEY</p>
        <a href="/kreasikan" class="btn btn-primary btn-large">
          Mulai Kreasi
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </main>

  <!-- Modal Detail -->
  <div class="modal-overlay" id="modalOverlay">
    <div class="modal-container">
      <button class="modal-close" id="modalClose">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>

      <div class="modal-content">
        <!-- Header -->
        <div class="modal-header">
          <span class="modal-category" id="modalCategory">Category</span>
          <h2 class="modal-title" id="modalTitle">Title</h2>
          <p class="modal-description" id="modalDescription">Description</p>
        </div>

        <!-- Gallery -->
        <div class="modal-gallery">
          <div class="gallery-main">
            <div class="gallery-image-container">
              <img src="" alt="" id="galleryMainImage" class="gallery-main-image">
              <div class="gallery-caption" id="galleryCaption">Caption</div>
            </div>
          </div>

          <!-- Gallery Navigation -->
          <button class="gallery-nav gallery-prev" id="galleryPrev">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
          </button>
          <button class="gallery-nav gallery-next" id="galleryNext">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>

          <!-- Thumbnails -->
          <div class="gallery-thumbnails" id="galleryThumbnails">
            <!-- Thumbnails will be populated by JavaScript -->
          </div>

          <!-- Gallery Counter -->
          <div class="gallery-counter" id="galleryCounter">1 / 5</div>
        </div>

        <!-- Full Description -->
        <div class="modal-full-description">
          <p id="modalFullDescription">Full description goes here</p>
        </div>

        <!-- CTA Button -->
        <div class="modal-cta">
          <a href="/kreasikan" class="btn btn-primary">
            Buat Jersey Seperti Ini
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Portfolio Hero */
  .portfolio-hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #E63946 0%, #F4A261 100%);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    color: white;
    padding: 120px 40px 60px;
  }

  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(48px, 10vw, 120px);
    line-height: 0.9;
    margin-bottom: 20px;
  }

  .title-line {
    display: block;
    opacity: 1;
  }

  .title-line.highlight {
    color: #F1FA8C;
  }

  .hero-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: clamp(16px, 2vw, 20px);
    font-weight: 300;
    opacity: 1;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Portfolio Filter */
  .portfolio-filter {
    padding: 60px 40px 40px;
    background: #f5f5f5;
  }

  .filter-container {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
    max-width: 800px;
    margin: 0 auto;
  }

  .filter-btn {
    padding: 12px 28px;
    background: white;
    color: #1a1a1a;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    border: 2px solid #e0e0e0;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-btn:hover {
    border-color: #E63946;
    color: #E63946;
  }

  .filter-btn.active {
    background: #E63946;
    border-color: #E63946;
    color: white;
  }

  /* Portfolio Grid Section */
  .portfolio-grid {
    padding: 60px 40px 100px;
    background: #f5f5f5;
    min-height: 60vh;
  }

  .portfolio-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid !important;
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 24px !important;
  }

  /* Portfolio Items - Global for dynamically added elements */
  :global(.portfolio-item) {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  :global(.portfolio-item:hover) {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  :global(.portfolio-item.hidden) {
    display: none;
  }

  :global(.portfolio-image) {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #e0e0e0;
  }

  :global(.portfolio-image img) {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global(.portfolio-item:hover .portfolio-image img) {
    transform: scale(1.05);
  }

  /* Text overlay on image */
  :global(.portfolio-text-overlay) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.05) 40%,
      rgba(0, 0, 0, 0.15) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 20px;
    color: white;
    z-index: 2;
    transition: all 0.3s ease;
  }

  :global(.portfolio-item:hover .portfolio-text-overlay) {
    background: linear-gradient(to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 40%,
      rgba(0, 0, 0, 0.2) 100%
    );
  }

  :global(.portfolio-item-content) {
    display: flex;
    flex-direction: column;
    gap: 8px;
    transform: translateY(0);
    transition: all 0.3s ease;
  }

  :global(.portfolio-item:hover .portfolio-item-content) {
    transform: translateY(-5px);
  }

  :global(.portfolio-category-tag) {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 10px;
    font-weight: 600;
    color: #E63946;
    background: white;
    padding: 4px 10px;
    border-radius: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    align-self: flex-start;
  }

  :global(.portfolio-item-title) {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 28px;
    line-height: 1.1;
    margin: 0;
    color: white;
  }

  :global(.portfolio-item-desc) {
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    opacity: 0.85;
    line-height: 1.4;
    margin: 0;
    color: white;
  }

  :global(.portfolio-overlay) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    opacity: 0;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    backdrop-filter: blur(2px);
  }

  :global(.portfolio-item:hover .portfolio-overlay) {
    opacity: 1;
    backdrop-filter: blur(4px);
  }

  :global(.portfolio-overlay-content) {
    color: white;
    text-align: center;
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  :global(.portfolio-item:hover .portfolio-overlay-content) {
    transform: scale(1);
  }

  :global(.portfolio-overlay-content p) {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    margin: 0;
    background: white;
    color: #E63946;
    padding: 12px 24px;
    border-radius: 25px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 1024px) {
    .portfolio-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .portfolio-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .portfolio-item-title {
      font-size: 20px;
    }
  }

  @media (max-width: 480px) {
    .portfolio-container {
      grid-template-columns: 1fr;
    }
  }

  /* Portfolio CTA */
  .portfolio-cta {
    padding: 100px 40px;
    background: linear-gradient(135deg, #F4A261 0%, #E63946 100%);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(36px, 6vw, 56px);
    color: white;
    margin-bottom: 16px;
  }

  .cta-subtitle {
    font-size: 18px;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 32px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 40px;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    border-radius: 50px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: white;
    color: #E63946;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }

  .btn-large {
    padding: 18px 48px;
    font-size: 18px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .portfolio-container {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .portfolio-hero {
      min-height: 40vh;
    }

    .hero-subtitle {
      font-size: 14px;
    }

    .filter-container {
      gap: 10px;
    }

    .filter-btn {
      padding: 10px 20px;
      font-size: 13px;
    }

    .portfolio-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .portfolio-item-title {
      font-size: 24px;
    }

    .portfolio-text-overlay {
      padding: 16px;
    }

    .portfolio-cta {
      padding: 48px 16px;
    }

    .cta-title {
      font-size: 32px;
    }
  }

  @media (max-width: 480px) {
    .portfolio-container {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .hero-content {
      padding: 100px 20px 40px;
    }
  }

  /* Modal Overlay */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(8px);
    z-index: 2000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-container {
    max-width: 900px;
    width: 100%;
    max-height: 90vh;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    position: relative;
    transform: scale(0.9) translateY(20px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4);
  }

  .modal-overlay.active .modal-container {
    transform: scale(1) translateY(0);
  }

  .modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
  }

  .modal-close:hover {
    background: #E63946;
    color: white;
    transform: rotate(90deg);
  }

  .modal-content {
    display: flex;
    flex-direction: column;
    max-height: 90vh;
    overflow-y: auto;
  }

  /* Custom scrollbar */
  .modal-content::-webkit-scrollbar {
    width: 6px;
  }

  .modal-content::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  .modal-content::-webkit-scrollbar-thumb {
    background: #E63946;
    border-radius: 3px;
  }

  /* Modal Header */
  .modal-header {
    padding: 32px;
    background: linear-gradient(135deg, #f8f8f8 0%, #fff 100%);
    border-bottom: 1px solid #eaeaea;
  }

  .modal-category {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 600;
    color: #E63946;
    background: #fff;
    padding: 6px 14px;
    border-radius: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 12px;
    box-shadow: 0 2px 8px rgba(230, 57, 70, 0.15);
  }

  .modal-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 42px;
    line-height: 1.1;
    color: #1a1a1a;
    margin: 0 0 8px 0;
  }

  .modal-description {
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    color: #666;
    margin: 0;
  }

  /* Modal Gallery */
  .modal-gallery {
    position: relative;
    background: #f8f8f8;
    padding: 24px;
  }

  .gallery-main {
    position: relative;
    margin-bottom: 16px;
  }

  .gallery-image-container {
    position: relative;
    width: 100%;
    max-height: 400px;
    border-radius: 16px;
    overflow: hidden;
    background: white;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gallery-main-image {
    width: 100%;
    max-height: 400px;
    display: block;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .gallery-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-image-container:hover .gallery-caption {
    transform: translateY(0);
  }

  /* Gallery Navigation */
  .gallery-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 5;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    color: #1a1a1a;
  }

  .gallery-nav:hover {
    background: #E63946;
    color: white;
    transform: translateY(-50%) scale(1.1);
  }

  .gallery-nav:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .gallery-nav:disabled:hover {
    background: rgba(255, 255, 255, 0.95);
    color: #1a1a1a;
    transform: translateY(-50%) scale(1);
  }

  .gallery-prev {
    left: 32px;
  }

  .gallery-next {
    right: 32px;
  }

  /* Gallery Thumbnails */
  .gallery-thumbnails {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 16px;
  }

  :global(.gallery-thumb) {
    width: 70px;
    height: 70px;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    border: 3px solid transparent;
    transition: all 0.3s ease;
    background: white;
  }

  :global(.gallery-thumb img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  :global(.gallery-thumb:hover) {
    border-color: #E63946;
    transform: scale(1.05);
  }

  :global(.gallery-thumb.active) {
    border-color: #E63946;
    box-shadow: 0 4px 15px rgba(230, 57, 70, 0.3);
  }

  /* Gallery Counter */
  .gallery-counter {
    text-align: center;
    margin-top: 12px;
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: #999;
  }

  /* Full Description */
  .modal-full-description {
    padding: 24px 32px;
    background: white;
    border-top: 1px solid #f0f0f0;
  }

  .modal-full-description p {
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    line-height: 1.7;
    color: #444;
    margin: 0;
  }

  /* Modal CTA */
  .modal-cta {
    padding: 24px 32px 32px;
    background: white;
    display: flex;
    justify-content: center;
  }

  /* Modal Responsive */
  @media (max-width: 768px) {
    .modal-container {
      max-height: 95vh;
    }

    .modal-header {
      padding: 24px 20px;
    }

    .modal-title {
      font-size: 32px;
    }

    .modal-gallery {
      padding: 16px;
    }

    .gallery-nav {
      width: 40px;
      height: 40px;
    }

    .gallery-prev {
      left: 20px;
    }

    .gallery-next {
      right: 20px;
    }

    :global(.gallery-thumb) {
      width: 55px;
      height: 55px;
    }

    .modal-full-description {
      padding: 20px;
    }

    .modal-cta {
      padding: 20px;
    }
  }

  @media (max-width: 480px) {
    .modal-overlay {
      padding: 10px;
    }

    .modal-header {
      padding: 20px 16px;
    }

    .modal-title {
      font-size: 28px;
    }

    .gallery-thumbnails {
      gap: 8px;
    }

    :global(.gallery-thumb) {
      width: 50px;
      height: 50px;
      border-radius: 10px;
    }

    .modal-full-description p,
    .modal-description {
      font-size: 14px;
    }
  }
</style>

